<div class="flex justify-center items-center mx-auto w-6/12">
  <div class="w-9/12 p-6 shadow-lg bg-white rounded-md">
    <h1 class="text-2xl block text-center font-semibold">Crie sua conta</h1>
    <hr class="mt-3">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.label :name %>
          <%= f.text_field :name, class: 'mt-1 w-full border-gray-300 rounded-md shadow-sm focus:border-blue-500 focus:ring-blue-500' %>
          <% if resource.errors[:name].any? %>
            <span class="text-red-500 text-sm"><%= User.human_attribute_name(:name) %> <%= resource.errors[:name].first %></span>
          <% end %>
        </div>

        <div class="field">
          <%= f.label :last_name %>
          <%= f.text_field :last_name, class: 'mt-1 w-full border-gray-300 rounded-md shadow-sm focus:border-blue-500 focus:ring-blue-500' %>
          <% if resource.errors[:last_name].any? %>
            <span class="text-red-500 text-sm"><%= User.human_attribute_name(:last_name) %> <%= resource.errors[:last_name].first %></span>
          <% end %>
        </div>

        <div class="field">
          <%= f.label :cpf %>
          <%= f.text_field :cpf, class: 'mt-1 w-full border-gray-300 rounded-md shadow-sm focus:border-blue-500 focus:ring-blue-500' %>
          <% if resource.errors[:cpf].any? %>
            <span class="text-red-500 text-sm"><%= User.human_attribute_name(:cpf) %> <%= resource.errors[:cpf].first %></span>
          <% end %>
        </div>

        <div class="field">
          <%= f.label :email %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'mt-1 w-full border-gray-300 rounded-md shadow-sm focus:border-blue-500 focus:ring-blue-500' %>
          <% if resource.errors[:email].any? %>
            <span class="text-red-500 text-sm"><%= User.human_attribute_name(:email) %> <%= resource.errors[:email].first %></span>
          <% end %>
        </div>

        <div class="field">
          <%= f.label :password %>
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> caracteres m√≠nimos)</em>
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password", class: 'mt-1 w-full border-gray-300 rounded-md shadow-sm focus:border-blue-500 focus:ring-blue-500' %>
          <% if resource.errors[:password].any? %>
            <span class="text-red-500 text-sm"><%= User.human_attribute_name(:password) %> <%= resource.errors[:password].first %></span>
          <% end %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'mt-1 w-full border-gray-300 rounded-md shadow-sm focus:border-blue-500 focus:ring-blue-500' %>
          <% if resource.errors[:password_confirmation].any? %>
            <span class="text-red-500 text-sm"><%= resource.errors[:password_confirmation].first %></span>
          <% end %>
        </div>

       <div class="actions mt-3 w-full flex justify-center"> 
          <%= f.submit "Cadastrar", class: 'dark:bg-gray-700 py-2 w-full border border-transparent rounded-md shadow-lg text-lg font-medium text-white hover:dark:bg-gray-800 cursor-pointer focus:outline-none focus:ring-2 transition duration-200 focus:ring-offset-2 focus:ring-blue-500'%>
        </div>
      <% end %>
      <hr class="mt-3">
      <div class="mt-3 text-center">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
