<div class="max-w-lg mt-12 mb-6 px-4">
  <div class="text-3xl font-bold mb-6">
    <h1>Cadastrar novo prato</h1>
  </div>

  <%= form_with model: [@restaurant, @dish], class: "space-y-6" do |f| %>
    <div class="grid grid-cols-1 gap-4 sm:grid-cols-2">


      <div class="col-span-2">
        <%= f.label :name, class: "block text-sm font-medium text-gray-700" %>
        <%= f.text_field :name, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
        <% if @dish.errors[:name].any? %> 
          <span class="text-red-500 text-sm"><%= Dish.human_attribute_name(:name) %> <%= @dish.errors[:name].first %></span>
        <% end %>
      </div>
      
      <div class="col-span-2">
        <%= f.label :description, class: "block text-sm font-medium text-gray-700" %>
        <%= f.text_area :description, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
        <% if @dish.errors[:description].any? %>
          <span class="text-red-500 text-sm"><%= Dish.human_attribute_name(:description) %> <%= @dish.errors[:description].first %></span>
        <% end %>
      </div>

      <div class="col-span-2">
        <div class="flex items-center">
          <%= f.label :calories, class: "block text-sm font-medium text-gray-700 mr-1" %>
          <em class="text-sm text-gray-500"> (opcional) </em>
        </div>
        <%= f.number_field :calories, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
        <% if @dish.errors[:calories].any? %>
          <span class="text-red-500 text-sm"><%= Dish.human_attribute_name(:calories) %> <%= @dish.errors[:calories].first %></span>
        <% end %>
      </div>

      <div class="col-span-2">
        <%= f.label :image, 'Imagem', class: "block text-sm font-medium text-gray-700" %>
        <%= f.file_field :image %>
        <% if @dish.errors[:image].any? %>
          <span class="text-red-500 text-sm"><%= Dish.human_attribute_name(:image) %> <%= @dish.errors[:image].first %></span>
        <% end %>
      </div>
    </div>

    <div class="mt-6">
      <%= f.submit 'Cadastrar prato',  class: 'dark:bg-gray-700 py-2 w-full border border-transparent rounded-md shadow-lg text-lg font-medium text-white hover:dark:bg-gray-800 cursor-pointer focus:outline-none focus:ring-2 transition duration-200 focus:ring-offset-2 focus:ring-blue-500' %>
    </div>
  <% end %>
</div>
