<div class="flex items-center justify-between mb-6">
    <div class="flex items-center">
        <%= link_to root_path do %>
            <%= image_tag 'left_arrow.png'%>
        <% end %>
        <h1 class="ml-3 text-3xl font-bold text-gray-800">Lista de funcionários pré-cadastrados</h1>
    </div>
    <%= link_to 'Pré-cadastrar funcionário', new_employee_path, class: 'dark:bg-gray-700 py-2 px-4 border border-transparent rounded-md shadow-lg text-lg font-medium text-white hover:dark:bg-gray-800 cursor-pointer focus:outline-none focus:ring-2 transition duration-200 focus:ring-offset-2 focus:ring-blue-500' %>
</div>

<% if @employees.any? %>
   <div class="w-full border border-gray-300 rounded-lg p-4 shadow-lg flex flex-col items-center mx-auto relative mt-4 mb-4">
  <table class="min-w-full divide-y divide-gray-200">
    <thead class="bg-gray-50">
      <tr>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">E-mail</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">CPF</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Registrado</th>
      </tr>
    </thead>
    <tbody class="bg-white divide-y divide-gray-200">
      <% @employees.each do |employee| %>
        <tr>
          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900"><%= employee.email %></td>
          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900"><%= employee.cpf %></td>
          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900"><%= employee.is_registered ? 'Sim' : 'Não' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<% else %>
    <h2 class="text-2xl font-bold text-gray-700">Nenhum funcionário pré-cadastrado.</h2>
<% end %>