<div class="w-full flex items-center justify-start mb-6">
    <%= link_to employees_path do %>
      <%= image_tag 'left_arrow.png'%>
    <% end %>
    <h1 class="ml-3 text-3xl font-bold text-gray-800">Pré-cadastro de funcionário</h1>
</div>

<div class="w-96" >
  <%= form_with model: @employee do |f| %>
    <div class="mb-4">
      <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
      <%= f.email_field :email, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-500 focus:ring-opacity-50" %>
      <% if @employee.errors[:email].any? %>
        <span class="text-red-500 text-sm"><%= Employee.human_attribute_name(:email) %> <%= @employee.errors[:email ].first %></span>
      <% end %>
    </div>

    <div class="mb-4">
      <%= f.label :cpf, class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :cpf, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-500 focus:ring-opacity-50" %>
      <% if @employee.errors[:cpf].any? %>
        <span class="text-red-500 text-sm"><%= Employee.human_attribute_name(:cpf) %> <%= @employee.errors[:cpf ].first %></span>
      <% end %>
    </div>

    <div class="flex items-center justify-end">
      <%= f.submit "Finalizar pré-cadastro", class: "dark:bg-gray-700 py-2 px-4 border border-transparent rounded-md shadow-lg text-lg font-medium text-white hover:dark:bg-gray-800 cursor-pointer focus:outline-none focus:ring-2 transition duration-200 focus:ring-offset-2 focus:ring-blue-500" %>
    </div>
  <% end %>
</div>