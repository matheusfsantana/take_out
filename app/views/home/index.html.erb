<div class="flex items-center justify-between mb-6">
  <div class="flex items-center" >
    <h1 class="text-3xl font-bold text-gray-800">Cardápios cadastrados</h1>
  </div>
  <%= link_to 'Cadastrar novo cardápio', new_menu_path,  class: 'dark:bg-gray-700 py-2 px-4 border border-transparent rounded-md shadow-lg text-lg font-medium text-white hover:dark:bg-gray-800 cursor-pointer focus:outline-none focus:ring-2 transition duration-200 focus:ring-offset-2 focus:ring-blue-500' %>
</div>

<% if @menus.any? %>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <% @menus.each do |menu| %>
        <%= link_to menu_path(menu) do %>
            <div class="bg-white shadow-md rounded-lg p-4">
              <h2 class="text-2xl font-bold text-gray-700"><%= menu.name %></h2>
              <span> <%= menu.items.where(is_active: true).joins(:item_options).count %> <%= Item.model_name.human(count: 2) %> </span>
            </div>
        <% end %>
      <% end %>
    </div>
<% else %>
    <h2 class="text-2xl font-bold text-gray-700">Nenhum menu cadastrado.</h2>
<% end %>
