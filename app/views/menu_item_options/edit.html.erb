<div class="w-full flex items-center justify-start mb-6">
    <%= link_to @path do %>
      <%= image_tag 'left_arrow.png'%>
    <% end %>
    <h1 class="ml-3 text-3xl font-bold text-gray-800">Atualizar porção <%= @menu_item.name %></h1>
</div>


<div class="w-96" >
  <%= form_with(model: @option, url: restaurant_menu_item_option_path(@restaurant, @menu_item)) do |f| %>
    <div class="mb-4">
      <%= f.label :description, class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :description, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-500 focus:ring-opacity-50" %>
      <% if @option.errors[:description].any? %>
        <span class="text-red-500 text-sm"><%= MenuItemOption.human_attribute_name(:description) %> <%= @option.errors[:description ].first %></span>
      <% end %>
    </div>

    <div class="mb-4">
      <%= f.label :price, class: "block text-sm font-medium text-gray-700" %>
      <%= f.number_field :price, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-500 focus:ring-opacity-50" %>
      <% if @option.errors[:price].any? %>
        <span class="text-red-500 text-sm"><%= MenuItemOption.human_attribute_name(:price) %> <%= @option.errors[:price ].first %></span>
      <% end %>
    </div>

    <div class="flex items-center justify-end">
      <%= f.submit "Atualizar porção", class: "dark:bg-gray-700 py-2 px-4 border border-transparent rounded-md shadow-lg text-lg font-medium text-white hover:dark:bg-gray-800 cursor-pointer focus:outline-none focus:ring-2 transition duration-200 focus:ring-offset-2 focus:ring-blue-500" %>
    </div>
  <% end %>
</div>