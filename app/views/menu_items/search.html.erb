<div class="flex items-center justify-between mb-6">
    <h1 class="text-3xl font-bold text-gray-800">Resultados da busca por: "<%= @search %>"</h1>
</div>

<h1 class="text-3xl font-bold text-gray-800">Pratos</h1>

<div class="flex flex-wrap gap-6 mt-3">
<% if @dishes.present? %>
    <% @dishes.each do |dish| %>
        <div class="border border-gray-200 w-96 p-6 rounded-lg shadow flex items-center">
        <% if dish.image.attached? %>
            <%= image_tag dish.image, alt: dish.name, class: "w-32 h-32 object-cover rounded-lg mr-6"%>
        <% else %>
            <%= image_tag "sem-imagem.jpg", class: "w-32 h-32 object-cover rounded-lg mr-6" %>
        <% end %>
        <div>
            <h2 class="text-2xl font-bold text-indigo-700 hover:text-indigo-900 mb-2"><%= link_to dish.name, restaurant_dish_path(user_restaurant, dish) %></h2>
            <p class="text-gray-700 text-lg mb-2"><%= dish.description %></p>
            <%= link_to "Editar Prato", edit_restaurant_dish_path(user_restaurant, dish), class: "bg-indigo-600 text-white py-2 px-4 rounded hover:bg-indigo-700" %>
        </div>
        </div>
    <% end %>
<% else %>
    <h2 class="text-2xl font-bold text-gray-700">Nenhum prato encontrado.</h2>
<% end %>
</div>

<h1 class="text-3xl font-bold text-gray-800 mt-3">Bebidas</h1>

<div class="flex flex-wrap gap-6 mt-3">
<% if @beverages.present? %>
    <% @beverages.each do |beverage| %>
        <div class="border border-gray-200 w-96 p-6 rounded-lg shadow flex items-center">
            <% if beverage.image.attached? %>
                <%= image_tag beverage.image, alt: beverage.name, class: "w-32 h-32 object-cover rounded-lg mr-6"%>
            <% else %>
                <%= image_tag "sem-imagem.jpg", class: "w-32 h-32 object-cover rounded-lg mr-6" %>
            <% end %>
            <div>
                <h2 class="text-2xl font-bold text-indigo-700 hover:text-indigo-900 mb-2"><%= link_to beverage.name, restaurant_dish_path(user_restaurant, beverage) %></h2>
                <p class="text-gray-700 text-lg mb-2"><%= beverage.description %></p>
                 <%= link_to "Editar Bebida", edit_restaurant_beverage_path(user_restaurant, beverage), class: "bg-indigo-600 text-white py-2 px-4 rounded hover:bg-indigo-700" %>
            </div>
        </div>
    <% end %>
<% else %>
    <h2 class="text-2xl font-bold text-gray-700">Nenhuma bebida encontrada.</h2>
<% end %>
</div>