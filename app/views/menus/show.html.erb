<div class="w-full flex items-center justify-start mb-6">
    <%= link_to root_path, class: "flex items-center" do %>
    <%= image_tag 'left_arrow.png'%>
    <% end %>
    <h1 class="ml-3 text-3xl font-bold text-gray-800"><%= Menu.model_name.human%> - <%= @menu.name %></h1>
</div>

<% if @dishes.blank? && @beverages.blank? %>
    <p class="text-lg font-semibold text-gray-800">Nenhum item cadastrado para esse cardÃ¡pio.</p>
<% end %>

<div class="space-y-6">
    <% if @dishes_options.any? %>
        <h2 class="text-3xl font-bold text-gray-800"><%= Dish.model_name.human(count: 2) %></h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <% @dishes_options.each do |option| %>
                <div class="bg-white shadow-md rounded-lg p-4">
                    <div class="mb-3">
                        <p class="text-lg font-semibold text-gray-800"><%= option.item.name %></p>
                        <p class="text-sm text-gray-500"><%= option.description %></p>
                        <p class="text-indigo-600 font-medium"><%= number_to_currency(option.price) %></p>
                    </div>
                </div>
            <% end %>
        </div>
    <% end %>
</div>

<div class="space-y-6 mt-3">
    <% if @beverages_options.any? %>
        <h2 class="text-3xl font-bold text-gray-800"><%= Beverage.model_name.human(count: 2) %></h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <% @beverages_options.each do |option| %>
                <div class="bg-white shadow-md rounded-lg p-4">
                    <div class="mb-3">
                        <p class="text-lg font-semibold text-gray-800"><%= option.item.name %></p>
                        <p class="text-sm text-gray-500"><%= option.description %></p>
                        <p class="text-indigo-600 font-medium"><%= number_to_currency(option.price) %></p>
                    </div>
                </div>
            <% end %>
        </div>
    <% end %>
</div>

